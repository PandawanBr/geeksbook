    package="blackbelt.com.geeksbook">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconeapp"
        android:label="Geeks Book"
        android:roundIcon="@drawable/iconeapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.TelaLogin"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MenuPrincipal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.Catalogo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.CatalogoTodosLivros"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.CatalogoCategoria"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.CatalogoBusca"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.AdministrarLivros"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.AlteracaoDeSenha"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.EquipeDesenvolvimento"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.PrimeiroAcesso"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.CadastroLivro"
            android:screenOrientation="portrait" />
        <activity android:name=".views.EsqueceuSenha" />
        <activity android:name=".views.DetalhesLivro" />
        <activity android:name=".views.AlterarLivro"></activity>
    </application>

</manifest>