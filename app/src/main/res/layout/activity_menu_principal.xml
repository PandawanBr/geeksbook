<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/header"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="blackbelt.com.livrariasaraiva.views.MenuPrincipal">

        <RelativeLayout
            android:id="@+id/cabecalho"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/geekbooks" />

            <TextView
                android:id="@+id/nomeLivraria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/logo"
                android:text="Geeks Book"
                android:textColor="@color/letrasPadrao"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/nomeLivraria"
                android:layout_marginBottom="10sp"
                android:text="Home"
                android:textColor="@color/letrasPadrao"
                android:textSize="20sp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/catalogo"
            style="?attr/borderlessButtonStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/cabecalho"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="60sp"
            android:background="@drawable/catalogocircle"
            android:onClick="catalogo" />

        <ImageButton
            android:id="@+id/administracaoDados"
            style="?attr/borderlessButtonStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/catalogo"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/administracao"
            android:onClick="administarDados" />

        <ImageButton
            android:id="@+id/alteraSenha"
            style="?attr/borderlessButtonStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/administracaoDados"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/alterarsenha"
            android:onClick="alterarSenha" />

        <ImageButton
            android:id="@+id/sobreEquipe"
            style="?attr/borderlessButtonStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/alteraSenha"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/equipedesenvolvimento"
            android:onClick="equipeDesenvolvimento" />

        <ImageButton
            android:id="@+id/sairMenu"
            style="?attr/borderlessButtonStyle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/sobreEquipe"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/sair"
            android:onClick="sairMenu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cabecalho"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="70sp"
            android:layout_toRightOf="@id/catalogo"
            android:text="Catálogo de Livros"
            android:textColor="@color/letrasPadrao"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/administracaoDados"
            android:layout_below="@id/catalogo"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="40sp"
            android:layout_toRightOf="@id/administracaoDados"
            android:text="Administração de Dados"
            android:textColor="@color/letrasPadrao"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/alteraSenha"
            android:layout_below="@id/administracaoDados"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="40sp"
            android:layout_toRightOf="@id/alteraSenha"
            android:text="Alterar Senha"
            android:textColor="@color/letrasPadrao"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sobreEquipe"
            android:layout_below="@id/alteraSenha"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="40sp"
            android:layout_toRightOf="@id/sobreEquipe"
            android:text="Equipe"
            android:textColor="@color/letrasPadrao"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/sairMenu"
            android:layout_below="@id/sobreEquipe"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="40sp"
            android:layout_toRightOf="@id/sairMenu"
            android:text="Sair"
            android:textColor="@color/letrasPadrao"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="400sp"
            android:layout_toRightOf="@id/sair"
            android:background="@drawable/goku"
            android:rotation="-30" />

    </RelativeLayout>
</ScrollView>