<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical"
        tools:context="blackbelt.com.livrariasaraiva.views.EquipeDesenvolvimento">

        <RelativeLayout
            android:id="@+id/cabecalho"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/geekbooks" />

            <TextView
                android:id="@+id/nomeLivraria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/logo"
                android:text="Geeks Book"
                android:textColor="@color/letrasPadrao"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/nomeLivraria"
                android:layout_marginBottom="10sp"
                android:text="Equipe"
                android:textColor="@color/letrasPadrao"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/integrantes"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_below="@id/cabecalho"
            android:layout_marginTop="80sp">

            <ImageView
                android:id="@+id/minhaFoto"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/minha_foto" />

            <TextView
                android:id="@+id/meuNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/minhaFoto"
                android:text="Rodrigo Kobayashi"
                android:textColor="@color/letrasPadrao"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meuEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/meuNome"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/minhaFoto"
                android:text="rodrigo_kobayashi@outlook.com"
                android:textColor="@color/letrasPadrao"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/meuRGM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/meuEmail"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/minhaFoto"
                android:text="RGM: 17840821"
                android:textColor="@color/letrasPadrao"
                android:textSize="20sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginTop="80sp">

            <ImageView
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:background="@drawable/venha"
                android:id="@+id/vader"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vader"
                android:textColor="@color/letrasPadrao"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="15sp"
                android:text="@string/darkside"
                android:textSize="25sp"/>


        </RelativeLayout>

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/back"
            android:onClick="voltar"
            android:id="@+id/voltar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/letrasPadrao"
            android:layout_gravity="center"
            />

    </LinearLayout>
</ScrollView>